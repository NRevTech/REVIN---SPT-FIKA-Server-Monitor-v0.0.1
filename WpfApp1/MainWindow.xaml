<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RSM Server Monitor" Height="884" Width="1027" Topmost="True" Background="#FF545454" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid Background="#FF545454" Width="1026" Height="854" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartButton" Content="START Server" Margin="789,531,0,0" Click="StartButton_Click" Background="#FFC7C2C2" Width="172" Height="56" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Bahnschrift Condensed"/>
        <TextBox x:Name="pathTextBox" HorizontalAlignment="Left" Margin="613,467,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" TextChanged="TextBox_TextChanged" Height="18"/>
        <Button x:Name="Browse1" Content="Browse" HorizontalAlignment="Left" Margin="879,490,0,0" VerticalAlignment="Top" Click="Browse1_Click" Height="26" Width="70"/>
        <Label Content="Locate Server EXE" HorizontalAlignment="Left" Margin="609,443,0,0" VerticalAlignment="Top" Width="112" Height="24"/>
        <Rectangle HorizontalAlignment="Left" Height="750" Stroke="Black" VerticalAlignment="Top" Width="504" Margin="27,36,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="88" Margin="601,438,0,0" Stroke="Black" VerticalAlignment="Top" Width="360"/>
        <Rectangle HorizontalAlignment="Left" Height="375" Margin="559,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="444"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,14,0,0" TextWrapping="Wrap" Text="FIKA Server Output CLI" VerticalAlignment="Top" Width="166" Foreground="White" Height="22" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="559,14,0,0" TextWrapping="Wrap" Text="Performance Monitor" VerticalAlignment="Top" Width="172" Foreground="White" Height="21" FontSize="16"/>
        <Border x:Name="Border1" BorderBrush="Black" BorderThickness="1" Margin="27,36,0,0" Width="504" Height="750" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="consoleOutput1" TextWrapping="Wrap" Background="#FF232222" Foreground="#FFC5C4C4" FontFamily="Calibri Light" Text="" Width="505" Height="749" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="16" TextChanged="consoleOutput1_TextChanged">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.05"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.749"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
        </Border>
        <Border x:Name="Border2" BorderBrush="Black" BorderThickness="1" Margin="559,36,0,0" Width="444" Height="375" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="consoleOutput2" TextWrapping="Wrap" Background="#FF232121" Foreground="#FFC8C4C4" Margin="-1,-1,-1,-1" Width="444" Height="375"/>
        </Border>
        <Button x:Name="StopButton" Content="STOP Server" Margin="789,592,0,0" Click="StopButton_Click" Background="#FFC7C2C2" Width="172" Height="56" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontFamily="Bahnschrift Condensed"/>
        <Image x:Name="amogus" HorizontalAlignment="Left" Height="92" VerticalAlignment="Top" Width="120" Source="/Among-Us-Svg.png" Opacity="0.085" Margin="27,694,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="125,786,0,0" TextWrapping="Wrap" Text="ALPHA BUILD v0.1.9" VerticalAlignment="Top" Height="52" Width="322" FontSize="36"/>

    </Grid>
</Window>
